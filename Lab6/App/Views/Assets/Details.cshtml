@model Asset

@{
    ViewData["Title"] = "Asset Details";
}

<div class="container mt-4">
    <h2>Asset Details</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Asset Name</dt>
                <dd class="col-sm-9">@Model.AssetName</dd>

                <dt class="col-sm-3">Asset Type</dt>
                <dd class="col-sm-9">@Model.RefAssetType.AssetTypeDescription</dd>

                <dt class="col-sm-3">Asset Size</dt>
                <dd class="col-sm-9">@Model.RefSize.SizeDescription</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.AssetsLifeCycleEvents.Last().StatusCode</dd>

                <dt class="col-sm-3">Life Cycle Phase</dt>
                <dd class="col-sm-9">@Model.AssetsLifeCycleEvents.Last().LifeCyclePhase.LifeCycleName</dd>

                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Model.AssetsLifeCycleEvents.Last().Location.LocationDetails</dd>

                <dt class="col-sm-3">Responsible Party</dt>
                <dd class="col-sm-9">@Model.AssetsLifeCycleEvents.Last().ResponsibleParty.PartyDetails</dd>

                @if (!string.IsNullOrEmpty(Model.OtherDetails))

                {
                    <dt class="col-sm-3">Additional Details</dt>
                    <dd class="col-sm-9">@Model.OtherDetails</dd>
                }
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Search" class="btn btn-secondary">Back to Search</a>
    </div>
</div>
